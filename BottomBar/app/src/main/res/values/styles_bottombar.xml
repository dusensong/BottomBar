<resources>

    <style name="BottomBar"></style>

    <style name="BottomBar.ItemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bottom_bar_bottom_area_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_bar_bottom_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BottomBar.ItemImageView">
        <item name="android:layout_width">@dimen/bottom_bar_icon_width</item>
        <item name="android:layout_height">@dimen/bottom_bar_icon_width</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:layout_marginTop">@dimen/bottom_bar_top_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BottomBar.ItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginBottom">@dimen/bottom_bar_bottom_margin</item>
        <item name="android:textColor">@color/bottom_bar_text</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
